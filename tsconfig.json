{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"jsx": "react",
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"outDir": "dist",
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", ".vscode-test", "out"]
}
